<h1 class="text-2xl font-bold mb-4">Generated Images</h1>

<div class="mb-8">
  <%= link_to "New Generated Image",
   new_generated_image_path,
  class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded no-underline no-hover-color" %>

</div>

<table class="min-w-full bg-white">
  <tbody>
    <% @generated_images.each do |gi| %>
      <tr>
        <td class="py-2 px-4 border-b border-gray-200"><%= truncate(gi.given_text, length: 140) %></td>
        <td class="py-2 px-4 border-b border-gray-200">
          <%= link_to 'Show', gi, class: "text-blue-500 hover:text-blue-700" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
