<h1>New Generated Image</h1>

<%= form_with model: @generated_image, local: true, data: { turbo: false }  do |f| %>
  <% if @generated_image.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@generated_image.errors.count, "error") %> prohibited this generated_image from being saved:</h2>
      <ul>
        <% @generated_image.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :given_text %>
  </div>

    <div class="field">
    <%= f.label :wave %>
    <%= f.check_box :wave %>
  </div>

  <div class="field">
    <%= f.label :implode %>
    <%= f.check_box :implode %>
  </div>

  <div class="field">
    <%= f.label :blur %>
    <%= f.check_box :blur %>
  </div>


  <div class="field">
    <%= f.label '難読化フォントを使う（英語のみ）' %>
    <%= f.check_box :use_zxx_noise_font %>
  </div>

  <div class="actions">
    <%= f.submit "Create" %>
  </div>
<% end %>
<%= link_to "Back", generated_images_path %>

